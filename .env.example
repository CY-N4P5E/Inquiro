# Inquiro Environment Configuration
# Copy this file to .env and customize the values for your setup

# =============================================================================
# Core Directory Configuration
# =============================================================================

# Base directory for all Inquiro data (default: C:/inquiro on Windows)
# INQUIRO_BASE_DIR=C:/inquiro

# Document storage directory (default: {INQUIRO_BASE_DIR}/data)
# DATA_PATH=C:/inquiro/data

# Vector database storage directory (default: {INQUIRO_BASE_DIR}/database/faiss_index)
# FAISS_PATH=C:/inquiro/database/faiss_index

# =============================================================================
# Document Processing Configuration
# =============================================================================

# Text chunk size for document processing (default: 500)
# CHUNK_SIZE=500

# Overlap between text chunks (default: 50)
# CHUNK_OVERLAP=50

# Maximum number of chunks to retrieve per query (default: 5)
# MAX_CHUNKS=5

# =============================================================================
# Ollama Configuration
# =============================================================================

# Ollama server URL (default: http://localhost:11434)
# OLLAMA_BASE_URL=http://localhost:11434

# Language model for response generation (default: llama3:8b)
# LLM_MODEL=llama3:8b

# Embedding model for document vectorization (default: nomic-embed-text)
# EMBEDDING_MODEL=nomic-embed-text

# =============================================================================
# Performance Configuration
# =============================================================================

# Temperature for LLM responses (0.0-1.0, default: 0.1)
# LLM_TEMPERATURE=0.1

# Maximum tokens for LLM responses (default: 1000)
# MAX_TOKENS=1000

# Timeout for Ollama requests in seconds (default: 60)
# OLLAMA_TIMEOUT=60

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, default: INFO)
# LOG_LEVEL=INFO

# Log file path (default: logs/inquiro.log)
# LOG_FILE=logs/inquiro.log

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode (true/false, default: false)
# DEBUG=false

# Enable verbose output (true/false, default: false)
# VERBOSE=false

# =============================================================================
# Advanced Configuration
# =============================================================================

# FAISS index factory string (default: "Flat")
# See: https://github.com/facebookresearch/faiss/wiki/The-index-factory
# FAISS_INDEX_FACTORY=Flat

# Enable FAISS GPU acceleration (true/false, default: false)
# Requires faiss-gpu instead of faiss-cpu
# FAISS_USE_GPU=false

# Number of CPU cores for FAISS operations (default: auto-detect)
# FAISS_NPROBE=1
